.tab-bar
  display -webkit-flex
  -webkit-flex-direction row
  -webkit-flex 0 0 auto
  border-bottom 5px solid #d2d2d2
  list-style none
  font-size 12px
  line-height 24px
  -webkit-user-select none


// Tab items

.tab-bar__item
  position relative
  display inline-block
  -webkit-flex 1
  width -webkit-min-content
  max-width 160px
  min-width 60px
  padding 5px 20px 0 8px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  background #808080
  border-radius 2px 2px 0 0
  color #efefef
  -webkit-font-smoothing subpixel-antialiased
  cursor default

  &:hover
    background #2c2c2c

.tab-bar__item--is-focused
  -webkit-flex 2
  background #d2d2d2
  color #2c2c2c
  -webkit-font-smoothing antialiased

  &:hover
    background #d2d2d2

.tab-bar__item--is-dirty:before
  content "* "
  font-weight bold


// Tab labels

.tab-bar__label:before
  margin-right 5px


// Close icon

.tab-bar__close
  position absolute
  right 4px
  top 50%
  margin-top -6px
  width 12px
  height 12px
  color white
  text-align center
  font-size 10px
  line-height 12px
  transform scale(0)
  transition transform .1s

  .tab-bar__item--is-focused &,
  .tab-bar__item:hover &
    transform scale(1)

  .tab-bar__item--is-focused &
    color #535353
