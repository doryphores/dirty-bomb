.image-selector
  display none
  position absolute
  z-index 2
  top 0
  left 0
  width 100%
  height 100%
  background black

.image-selector--is-open
  display flex

.image-toolbar
  padding 5px
  background #808080

.image-list
  list-style none
  display flex
  flex-direction row
  flex-wrap wrap
  align-items center
  justify-content space-around
  overflow auto
  height 100%

.image-list__item
  width 200px
  margin 10px
  padding 5px
  background black
  transition all .1s

  &:hover
    background #808080
    transform scale(1.2)

  img
    display block
    max-width 100%
    max-height 100%
    border 1px solid black
