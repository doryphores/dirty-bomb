.image-selector
  position absolute
  z-index 2
  top -100%
  left 0
  width 100%
  height 100%
  background black
  transition top .4s

.image-selector--is-open
  top 0

.image-toolbar
  padding 5px
  background #808080

.image-list
  list-style none
  display flex
  flex-direction row
  flex-wrap wrap
  align-items center
  justify-content space-around
  overflow auto
  height 100%

.image-list__item
  width 200px
  margin 10px
  padding 5px
  background black
  transition all .1s

  &:hover
    background #808080
    transform scale(1.1)

  img
    display block
    max-width 200px
    max-height 200px
    border 1px solid black
