.tree
  -webkit-flex 0 0 auto
  width 300px
  height 100%
  overflow auto
  background #a0a0a0
  -webkit-user-select none


.tree__scroller
  position relative
  padding 10px
  min-width -webkit-min-content
  height 100%


// Tree node lists

.tree__node-list
  list-style none
  display none
  font-size 12px
  line-height 26px

  .tree__node--is-open > &
    display block

.tree__node-list--is-root
  display block


// Tree nodes

.tree__node
  .tree__node
    padding-left 20px

  &:before
    content ""
    display none
    position absolute
    background #ccc
    left 0
    right 0
    height 26px

.tree__node--is-selected:before
  display block


// Tree labels

.tree__label
  position relative
  display block
  padding-right 5px
  white-space nowrap
  cursor default
  transition color .1s

  .tree__node--is-selected > &,
  &:hover
    color #000


// Tree label icons

.tree__label:before
  position relative
  top -2px
  display inline-block
  width 14px
  height 14px
  margin-right 8px
  vertical-align middle
  text-align center
  font-family iconic
  font-size 14px
  line-height 14px
  font-weight normal

.tree__label--is-folder:before
  content "\e66d"

.tree__label--is-file:before
  content "\e61d"

.tree__node-list--is-root > .tree__node > .tree__label--is-folder:before
  content "\e66b"
