.setup__screen
  display flex
  align-items center
  justify-content center
  font-size 14px
  background #808080
  color #f2f2f2

.setup__panel
  width 300px
  min-height 300px

.setup__form
  .setup__panel--in-progress &
    display none

  h2
    padding-bottom 5px
    margin-bottom 20px
    border-bottom 1px solid #f2f2f2
    font-size 26px
    font-weight 500

    &:before
      position relative
      top 1px
      margin-right 7px
      font-size 20px

  label
    display block
    margin-bottom 20px

  input
    display block
    box-sizing border-box
    width 100%
    padding 6px
    margin-top 10px
    border 1px solid #535353
    border-radius 3px
    font-family Source Code Pro
    font-size 14px
    font-weight 600
    background #f2f2f2
    color #535353
    outline none

.setup__progress-indicator
  display none
  margin-top 30%
  text-align center

  .setup__panel--in-progress &
    display block
