.editor-panes
  flex 1
  position relative
  height 100%
  width 100%
  background #d2d2d2

.editor-pane
  display flex
  flex-direction row
  position absolute
  z-index 1
  width 100%
  height 100%

.editor-pane--is-focused
  z-index 2

.editor-toolbar
  padding 0 5px 5px 5px

.editor
  display flex
  flex-direction column
  width 50%
  height 100%

.cm-container
  flex 1
  position relative

.CodeMirror
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  height auto
  padding 10px
  font 14px/18px Source Code Pro

.cm-trailingspace
  background #cf1f1f
