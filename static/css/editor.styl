.editor-panes
  position relative
  height 100%
  width 100%
  background #d2d2d2

.editor-pane
  position absolute
  z-index 1
  width 100%
  height 100%

.editor-pane--is-focused
  z-index 2

.editor-toolbar
  padding 0 5px 5px 5px

.editor
  width 50%
  height 100%

.cm-container
  position relative
  height 100%

.CodeMirror
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  height auto
  padding 10px
  font 14px/18px Source Code Pro
