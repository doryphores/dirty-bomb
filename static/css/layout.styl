*
  box-sizing border-box

html
body
  height 100%
  overflow hidden
  background #808080

.is-resizing
  -webkit-user-select none

.app-container
  height 100%

.app
  display flex
  flex-direction column
  align-items stretch
  height 100%

.workspace
  display flex
  flex-direction row
  flex 1
  height 100%

.panels
  display flex
  flex-direction column
  flex 1
  padding-left 5px

// Scrollbars

::-webkit-scrollbar
  width 10px
  height 10px

::-webkit-scrollbar-track
  background #808080

::-webkit-scrollbar-thumb
  border-radius 5px
  border 3px solid transparent
  background #3a3e42
  background-clip content-box

::-webkit-scrollbar-corner
  background #808080

::-webkit-scrollbar-thumb:active
  border-radius 0
  border 0
