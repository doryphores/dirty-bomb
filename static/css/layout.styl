*
  box-sizing border-box

html
body
  height 100%
  overflow hidden

.panel-container
  display flex
  width 100%
  height 100%
  align-items stretch

  &.horizontal
    flex-direction row

  &.vertical
    flex-direction column

.workspace
  position relative
  z-index 1
  padding-left 5px
  background #808080

// Scrollbars

::-webkit-scrollbar
  width 10px
  height 10px

::-webkit-scrollbar-track
  background #808080

::-webkit-scrollbar-thumb
  border-radius 5px
  border 3px solid transparent
  background #3a3e42
  background-clip content-box

::-webkit-scrollbar-corner
  background #808080

::-webkit-scrollbar-thumb:active
  border-radius 0
  border 0
