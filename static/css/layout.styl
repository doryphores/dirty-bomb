*
  box-sizing border-box

html
body
  height 100%
  overflow hidden

.panel-container
  display -webkit-flex
  width 100%
  height 100%
  -webkit-align-items stretch

  &.horizontal
    -webkit-flex-direction row

  &.vertical
    -webkit-flex-direction column

.workspace
  position relative
  z-index 1
  padding-left 5px
